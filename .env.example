# X-manage-app Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Local development database (libSQL)
DATABASE_URL="libsql://local.db"

# Turso production database
TURSO_DATABASE_URL="libsql://your-database-name.turso.io"
TURSO_AUTH_TOKEN="your-turso-auth-token"

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Better Auth secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET="your-better-auth-secret-key"

# Google OAuth credentials (from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-oauth-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Application URLs
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_URL_INTERNAL="http://localhost:3000"

# =============================================================================
# X (TWITTER) API CONFIGURATION
# =============================================================================

# X API v2 credentials (from X Developer Portal)
X_API_KEY="your-x-api-key"
X_API_SECRET="your-x-api-secret"
X_BEARER_TOKEN="your-x-bearer-token"

# X OAuth 2.0 (for user authentication)
X_CLIENT_ID="your-x-oauth-client-id"
X_CLIENT_SECRET="your-x-oauth-client-secret"

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_API_DSN="https://your-api-sentry-dsn@sentry.io/project-id"

# Sentry configuration
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT_WEB="x-manage-web"
SENTRY_PROJECT_API="x-manage-api"

# =============================================================================
# CLOUDFLARE CONFIGURATION
# =============================================================================

# Cloudflare API token (for deployment)
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"

# Cloudflare Account ID
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment
NODE_ENV="development"

# API URLs
NEXT_PUBLIC_API_URL="http://localhost:8787"
API_URL="http://localhost:8787"

# =============================================================================
# OPTIONAL: 1PASSWORD INTEGRATION
# =============================================================================

# If using 1Password CLI for secret management
# OP_VAULT="X-manage-dev"
# OP_SERVICE_ACCOUNT_TOKEN="your-1password-service-account-token"

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database (separate from development)
TEST_DATABASE_URL="libsql://test.db"

# Test API keys (use separate test credentials)
TEST_X_BEARER_TOKEN="your-test-x-bearer-token"
