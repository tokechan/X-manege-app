{
  "name": "x-manage-app",
  "version": "0.1.0",
  "description": "A web app for managing X (formerly Twitter) posts",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "test:unit": "pnpm -r test:unit",
    "test:e2e": "pnpm -r test:e2e",
    "precommit": "pnpm lint && pnpm type-check && pnpm test",
    "secrets:setup": "./scripts/setup-secrets.sh setup",
    "secrets:validate": "./scripts/setup-secrets.sh validate",
    "secrets:cloudflare": "./scripts/setup-secrets.sh cloudflare",
    "secrets:1password": "./scripts/1password-integration.sh setup",
    "secrets:generate": "./scripts/1password-integration.sh generate",
    "deploy:dev": "./scripts/deploy-cron.sh full development",
    "deploy:staging": "./scripts/deploy-cron.sh full staging",
    "deploy:production": "./scripts/deploy-cron.sh full production",
    "cron:test": "./scripts/deploy-cron.sh test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx drizzle/seed.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "playwright": "^1.40.0",
    "drizzle-kit": "^0.20.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "tsx": "^4.0.0"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.0",
    "@libsql/client": "^0.5.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
